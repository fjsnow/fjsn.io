---
import '@/global.css';
import Layout from '@/layouts/Layout.astro';

import '@fontsource-variable/roboto-mono';
import robotoMonoWoff2 from '@fontsource-variable/roboto-mono/files/roboto-mono-latin-wght-normal.woff2';
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta name="format-detection" content="telephone=no" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <link
            rel="preload"
            as="font"
            type="font/woff2"
            href={robotoMonoWoff2}
            crossorigin="anonymous"
        />
        <script>
            const theme = localStorage.getItem('theme');
            if (theme)
                document.documentElement.setAttribute('data-theme', theme);
        </script>
        <noscript>
            <style>
                .js-only {
                    display: none;
                }
            </style>
        </noscript>
    </head>
    <body
        class="bg-[#FCFCFC] font-mono text-stone-950 antialiased dark:bg-[#151515] dark:text-stone-50"
    >
        <Layout>
            <slot />
        </Layout>
    </body>
</html>

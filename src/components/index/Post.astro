---
import { formatDate } from '@/lib/post';
import type { CollectionEntry } from 'astro:content';

interface Props {
    post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
---

<a
    href={'/posts/' + post.id}
    class="flex flex-col justify-between gap-x-4 gap-y-1 sm:flex-row sm:items-center"
    data-astro-prefetch
>
    <div class="flex flex-row items-center gap-2">
        <h1 class="text-sm">{post.data.title}</h1>
    </div>
    <span class="min-w-fit text-xs text-stone-500 dark:text-stone-400">
        {formatDate(new Date(post.data.published))}
    </span>
</a>

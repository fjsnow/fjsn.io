---
import Section from './Section.astro';
import Post from './Post.astro';
import type { MDPost } from '@/lib/post';

const posts = (
    Object.values(
        import.meta.glob('@/pages/post/*.md', { eager: true })
    ) as MDPost[]
)
    .filter((post) => post.frontmatter.listed !== false)
    .sort(
        (a, b) =>
            new Date(b.frontmatter.published).getTime() -
            new Date(a.frontmatter.published).getTime()
    );
---

<Section title="blog">
    {
        posts.length > 0 ? (
            <div class="flex flex-col gap-4">
                {posts.map((post) => (
                    <Post post={post} />
                ))}
            </div>
        ) : (
            <div class="border border-dashed border-stone-800 rounded-xs p-4 flex items-center justify-center">
                <h1 class="text-sm">no posts were found.</h1>
            </div>
        )
    }
</Section>

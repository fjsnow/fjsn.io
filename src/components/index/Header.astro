---
import { Image } from 'astro:assets';
import Avatar from '@/assets/avatar.png';
import Github from '@/assets/icons/github.svg';
---

<div class="flex flex-row items-center justify-between gap-4">
    <div class="flex flex-col">
        <div class="flex flex-row items-center gap-2">
            <Image
                src={Avatar}
                alt="avatar"
                class="h-5 w-5 rounded-sm border border-stone-200 dark:border-stone-700"
            />
            <span class="font-semibold">Freddy Snow</span>
        </div>
        <span class="text-sm text-stone-500 dark:text-stone-400">
            cs student @ <a
                href="https://birmingham.ac.uk"
                class="hover:text-stone-700 dark:hover:text-stone-300">uob</a
            > (uk)
        </span>
    </div>
    <a
        href="https://github.com/fjsnow"
        target="_blank"
        rel="noopener noreferrer"
        class="h-fit text-stone-500 hover:text-stone-700 dark:text-stone-400 dark:hover:text-stone-300"
        aria-label="Github"
    >
        <Github class="h-5 w-5" aria-label="Github" />
    </a>
</div>

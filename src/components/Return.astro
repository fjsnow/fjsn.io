---
import Left from '@/assets/icons/left.svg';

interface Props {
    navigatable: boolean;
}

const props = Astro.props;
---

<a
    href="/"
    class="group flex w-fit flex-row items-center gap-2 text-sm text-stone-700 hover:text-stone-800 dark:text-stone-400 dark:hover:text-stone-300"
    data-astro-prefetch
>
    <Left class="h-3 w-3" aria-hidden />
    <span
        class="group-hover:underline"
        aria-label="Go back to index"
        title="Go back to index">{props.navigatable ? 'back' : 'index'}</span
    >
</a>
